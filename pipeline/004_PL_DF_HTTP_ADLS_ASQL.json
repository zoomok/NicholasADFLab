{
	"name": "004_PL_DF_HTTP_ADLS_ASQL",
	"properties": {
		"description": "1. Get Chicago crime data from https://data.cityofchicago.org/resource/crimes.json?$limit=50000\n2. Copy data to data lake as csv file\n3. From csv file, extract DayOfWeekCount and save aggregation data to Azure database\n\nLink : None",
		"activities": [
			{
				"name": "Copy http JSON file to ADLS CSV",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Delete Crime CSV File",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "HttpReadSettings",
							"requestMethod": "GET"
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_SODA_CreimAPI",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DS_ADLS_CSV_ChicagoCrime",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Data flow - Aggr - Save to DB",
				"type": "ExecuteDataFlow",
				"dependsOn": [
					{
						"activity": "Copy http JSON file to ADLS CSV",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "SourceCrimeCSV",
						"type": "DataFlowReference"
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					}
				}
			},
			{
				"name": "Delete Crime CSV File",
				"type": "Delete",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "DS_ADLS_CSV_ChicagoCrime",
						"type": "DatasetReference"
					},
					"logStorageSettings": {
						"linkedServiceName": {
							"referenceName": "LS_ADLS",
							"type": "LinkedServiceReference"
						}
					},
					"enableLogging": true,
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"fileListPath": "demo/ChicagoCrime.csv"
					}
				}
			}
		],
		"annotations": []
	}
}